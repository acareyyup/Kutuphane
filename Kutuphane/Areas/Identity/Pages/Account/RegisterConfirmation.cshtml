@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<h1>Kayıt Onayı</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
        <p>
            Bu uygulamanın şu anda kayıtlı gerçek bir e-posta göndereni yok  <a href="https://aka.ms/aspaccountconf"></a> 
            <a id="confirm-link" href="@Model.EmailConfirmationUrl">Hesabınızı onaylamak için burayı tıklayın</a>
        </p>
    }
    else
    {
        <p>
            Hesabınızı onaylamak için lütfen e-postanızı kontrol edin
        </p>
    }
}

